<%include ./partials/header%>

<div class="ui four column doubling stackable grid container">
    <div class="ui huge header">Photo App</div>
    <div class="ui top attached segment">
        <div class="five column doubling ui grid">
            <% photos.forEach(function(photo) { %>
            <div class="item">
                <div class="ui medium rounded images">
                <a href="/photos/<%=photo._id%>">
                    <img class="ui image" src="<%= photo.image %>">
                    </a>
                </div>
                <div class="content">
                    <p class="header" ><%= photo.title%></p>
                    <div class="meta">
                        <span><%= photo.dateCreated.toDateString()%></span>
                    </div>
                    <div class="description">
                        <p><%-photo.description.substring(0, 80)%></p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic tiny black button" href="/photos/<%=photo._id%>">
                            Read More
                            <i class="right small chevron icon"></i>
                        </a>

                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<%include ./partials/footer%>
