<% include ./partials/header%>

<div class="ui main text container segment">
    <div class=" ui huge header">Edit <%= photo.title%></div>
    <form class="ui form" action="/photos/<%= photo._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="photo[title]" value="<%=photo.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="photo[image]" value=" <%=photo.image%>">
        </div>
        <div class="field">
            <label>Photo Description</label>
            <textarea name="photo[description]"><%= photo.description%></textarea>
        </div>
        <input value="Submit" type="submit" class="ui violet big basic button">


    </form>
</div>

<% include ./partials/footer%>